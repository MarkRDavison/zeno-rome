@inherits Form<EditAccountFormViewModel>

<MudForm>
    <MudTextField id="edit-account-form-name" T="string" Label="Name" Required="true" @bind-Text="FormViewModel.Name" For="@(() => FormViewModel.Name)" />
    <MudTextField id="edit-account-form-account-number" T="string" Label="Account number" @bind-Text="FormViewModel.AccountNumber" For="@(() => FormViewModel.AccountNumber)" />
    @if (!FormViewModel.HideAccountType)
    {
        <Dropdown Id="edit-account-form-account-type" Label="Account type" Items="@FormViewModel.AccountTypes" Required="true" @bind-Value="FormViewModel.AccountTypeId" For="@(() => FormViewModel.AccountTypeId)" />
    }
    <Dropdown Id="edit-account-form-currency" Label="Currency" Items="@FormViewModel.CurrencyItems" Required="true" @bind-Value="FormViewModel.CurrencyId" For="@(() => FormViewModel.CurrencyId)" />
    <NumericField id="edit-account-form-opening-balance" HideSpinButtons Label="Opening balance" @bind-Value="FormViewModel.OpeningBalance" AllowNegative="false" DecimalPlaces="@FormViewModel.DecimalPlaces" For="@(() => FormViewModel.OpeningBalance)" />
    <NumericField id="edit-account-form-virtual-balance" HideSpinButtons Label="Virtual balance" @bind-Value="FormViewModel.VirtualBalance" AllowNegative="false" DecimalPlaces="@FormViewModel.DecimalPlaces" For="@(() => FormViewModel.VirtualBalance)" />
    <MudDatePicker id="edit-account-form-opening-balance-date" Label="Opening balance date" @bind-Date="FormViewModel.OpeningBalanceDate" For="@(() => FormViewModel.OpeningBalanceDate)" />
</MudForm>