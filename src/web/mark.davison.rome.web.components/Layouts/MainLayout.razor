@inherits LayoutComponentBase

@implements IDisposable

@inject AuthenticationStateProvider _auth
@inject NavigationManager _navigationManager
@inject IAuthenticationService _authenticationService
@inject IClientHttpRepository _clientRepository;
@inject IStartupState _startupState
@inject IAppContextService _appContext

<MudThemeProvider @ref="@_mudThemeProvider" @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        @if (!string.IsNullOrEmpty(_navigationManager.ToBaseRelativePath(_navigationManager.Uri)))
        {
            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Color="Color.Inherit" Edge="Edge.Start" Href="@Routes.Dashboard" />
        }
        <MudText Typo="Typo.h4" Class="app-title">Finance</MudText>
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
                <MudSpacer />
                <AppContext ClaimsPrincipal="@context.User" />
                <MudMenu AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight" Size="Size.Large">
                    <ActivatorContent>
                        <MudIconButton data-testid="@DataTestIds.ManageIcon" Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" Edge="Edge.End" />
                    </ActivatorContent>
                    <ChildContent>
                        <MudMenuItem Href="@Routes.UserSettings">Settings</MudMenuItem>
                        @if (context.User.IsInRole(RoleConstants.Admin))
                        {
                            <MudDivider />
                            <MudMenuItem Href="@Routes.AdminSettings">Admin Settings</MudMenuItem>
                        }
                        <MudDivider />
                        <MudMenuItem Href="@($"{_authenticationService.BffRoot}/account/logout")">Logout</MudMenuItem>
                    </ChildContent>
                </MudMenu>
                <MudIconButton data-testid="@DataTestIds.QuickCreate" Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => QuickAddToggle())" />
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <AuthorizeView>
        <Authorized>
            <MudDrawer Elevation="2" @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Variant="DrawerVariant.Persistent">
                <NavMenu />
            </MudDrawer>
            <MudDrawer Class="mud-height-full" @bind-Open="@_quickAddOpen" Anchor="@Anchor.Right" Variant="DrawerVariant.Temporary" OverlayAutoClose>
                <QuickAdd OnSelect="@(() => _quickAddOpen = false)" />
            </MudDrawer>
        </Authorized>
    </AuthorizeView>
    <MudMainContent>
        <MudContainer Class="ma-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _quickAddOpen = false;
    private bool _isDarkMode;
    private MudThemeProvider? _mudThemeProvider;
    private bool disposedValue;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    void QuickAddToggle()
    {
        _quickAddOpen = !_quickAddOpen;
    }

    protected override async Task OnInitializedAsync()
    {
        _appContext.RangeUpdated += async (o, e) =>
        {
            await InvokeAsync(StateHasChanged);
        };

        _auth.AuthenticationStateChanged += OnAuthStateChanged;

        var response = await _clientRepository.Get<BootstrapQueryRequest, BootstrapQueryResponse>(CancellationToken.None);

        if (response.SuccessWithValue)
        {
            _startupState.NotifyStateChanged(response.Value.AuthProviders);
        }
    }

    private void OnAuthStateChanged(Task<AuthenticationState> authState)
    {
        _ = HandleAuthStateChanged(authState);
    }

    private async Task HandleAuthStateChanged(Task<AuthenticationState> authState)
    {
        var newState = await authState;

        if (newState.User.Identity?.IsAuthenticated ?? false)
        {
            var startupResponse = await _clientRepository.Get<StartupQueryRequest, StartupQueryResponse>(CancellationToken.None);

            if (startupResponse.SuccessWithValue)
            {
                _startupState.NotifyStateChanged(startupResponse.Value);
            }
        }
        else
        {
            Console.WriteLine("On un-Authenticated");
        }

        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && _mudThemeProvider != null)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
            await _mudThemeProvider.WatchSystemDarkModeAsync(OnSystemPreferenceChanged);
            await InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        if (!disposedValue)
        {
            disposedValue = true;
            _auth.AuthenticationStateChanged -= OnAuthStateChanged;
        }
    }

    private async Task OnSystemPreferenceChanged(bool newValue)
    {
        _isDarkMode = newValue;
        await InvokeAsync(StateHasChanged);
    }
}